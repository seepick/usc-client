<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} -%kvp- %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.github.seepick.uscclient" level="TRACE"/>
    <!--    <logger name="io.ktor.client" level="TRACE"/>-->
    <root level="WARN">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
